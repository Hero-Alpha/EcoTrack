<% layout("/layouts/boilerplate-user") %>

<div class="row mt-3">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1">
    <h1 class="text-center mb-3">Add a Delivery Partner</h1>
    <p class="text-center text-muted">
      Register your delivery partners for efficient order fulfillment.
    </p>
    <form action="/drivers/add-driver" method="POST" class="needs-validation" novalidate>

      <!-- Driver Name -->
      <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
          <input
            class="form-control"
            type="text"
            name="name"
            id="name"
            placeholder="e.g., Raj Kumar"
            required
          >
        </div>
        <div class="invalid-feedback">Please provide the driver's full name!</div>
      </div>

      <!-- License Number -->
      <div class="mb-3">
        <label for="licenseNumber" class="form-label">License Number</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-card-list"></i></span>
          <input
            class="form-control"
            type="text"
            name="licenseNumber"
            id="licenseNumber"
            placeholder="e.g., DL-0420211234567"
            required
          >
        </div>
        <div class="invalid-feedback">Please enter a valid license number!</div>
      </div>

      <!-- Phone Number -->
      <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
          <input
            class="form-control"
            type="tel"
            name="phone"
            id="phone"
            placeholder="e.g., 9876543210"
            pattern="[0-9]{10}"
            required
          >
        </div>
        <div class="invalid-feedback">Please provide a valid 10-digit phone number!</div>
      </div>

      <!-- Experience -->
      <div class="mb-3">
        <label for="experience" class="form-label">Experience (in years)</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-briefcase-fill"></i></span>
          <input
            class="form-control"
            type="number"
            name="experience"
            id="experience"
            placeholder="e.g., 3"
            min="0"
            required
          >
        </div>
        <div class="invalid-feedback">Please enter the number of years of experience!</div>
      </div>

      <!-- Submit Button -->
      <button class="btn btn-dark col-12 mt-3" type="submit">Add Delivery Partner</button>
    </form>
  </div>
</div>
